.day-card {
  width: 200rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
  padding: 16rpx;
}

.day-header {
  font-weight: bold;
  margin-bottom: 12rpx;
}

.event-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.event-item {
  background-color: #f5f5f5;
  padding: 8rpx;
  border-radius: 8rpx;
}